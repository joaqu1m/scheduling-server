generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserSchedules {
  id    String   @map("_id") @db.ObjectId
  desc  String
  time  DateTime @db.Date
  title String
}

model User {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  name      String
  password  String
  schedules UserSchedules[]
}
